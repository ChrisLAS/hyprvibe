# Example secrets.yaml file
# After setting up .sops.yaml, create and encrypt this file with:
# nix-shell -p sops --run "sops secrets/example.yaml"

# API tokens and keys
github_token: "ghp_your_github_token_here"
api_keys:
  openai: "sk-your_openai_api_key"
  anthropic: "sk-ant-your_anthropic_key"

# WiFi credentials
wifi:
  home_network:
    ssid: "YourHomeNetwork"
    password: "your_wifi_password"
  work_network:
    ssid: "WorkNetwork"
    password: "work_wifi_password"

# User passwords (hashed with mkpasswd)
user_passwords:
  alice: "$y$j9T$abc123def456ghi789..."
  bob: "$y$j9T$jkl012mno345pqr678..."

# Database credentials
database:
  postgres:
    host: "db.example.com"
    port: 5432
    username: "app_user"
    password: "secure_db_password"
    ssl_cert: |
      -----BEGIN CERTIFICATE-----
      MIIDjTCCAnWgAwIBAgIJAL...
      -----END CERTIFICATE-----

# SSH keys
ssh_keys:
  deploy_key: |
    -----BEGIN OPENSSH PRIVATE KEY-----
    b3BlbnNzaC1rZXktdjEAAAAABG5vbmUAAAAEbm9uZQAAAAAAAAABAAAAMwAAAAtz
    c2gtZWQyNTUxOQAAACDENhLwQI4v/Ecv65iCMZ7aZAL+Sdc0Cqyjkd012XwJzQ
    AAAJht4at6beGregAAAAtzc2gtZWQyNTUxOQAAACDENhLwQI4v/Ecv65iCMZ7a
    ZAL+Sdc0Cqyjkd012XwJzQAAAEBizgX7v+VMZeiCtWRjpl95dxqBWUkbrPsU
    SYF3DGV0rsQ2EvBAji/8Ry/rmIIxntpkAv5J1zQKrKOR3TXZfAnNAAAAE2pv
    ZXJnQHR1cmluZ21hY2hpbmUBAg==
    -----END OPENSSH PRIVATE KEY-----

# TLS certificates
tls:
  domain_com:
    certificate: |
      -----BEGIN CERTIFICATE-----
      MIIDjTCCAnWgAwIBAgIJAL...
      -----END CERTIFICATE-----
    private_key: |
      -----BEGIN PRIVATE KEY-----
      MIIEvgIBADANBgkqhkiG9w...
      -----END PRIVATE KEY-----

# Service-specific secrets
services:
  nextcloud:
    admin_password: "nextcloud_admin_password"
    db_password: "nextcloud_db_password"
  
  jellyfin:
    api_key: "jellyfin_api_key"
  
  vaultwarden:
    admin_token: "vaultwarden_admin_token"
    smtp_password: "smtp_password_for_vaultwarden"

# Email configuration
email:
  smtp:
    host: "smtp.example.com"
    port: 587
    username: "your_email@example.com"
    password: "your_email_password"
    
# VPN credentials
vpn:
  wireguard:
    private_key: "your_wireguard_private_key"
    preshared_key: "your_preshared_key"
  
  openvpn:
    username: "vpn_username"
    password: "vpn_password"

# Cloud provider credentials
cloud:
  aws:
    access_key_id: "AKIAIOSFODNN7EXAMPLE"
    secret_access_key: "wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY"
  
  gcp:
    service_account_key: |
      {
        "type": "service_account",
        "project_id": "your-project-id",
        "private_key_id": "key-id",
        "private_key": "-----BEGIN PRIVATE KEY-----\nMIIEvgIBADANBgkqhkiG9w...\n-----END PRIVATE KEY-----\n",
        "client_email": "service-account@your-project.iam.gserviceaccount.com",
        "client_id": "123456789012345678901",
        "auth_uri": "https://accounts.google.com/o/oauth2/auth",
        "token_uri": "https://oauth2.googleapis.com/token"
      }